# Simple single-stage build for debugging
FROM maven:3.9.6-openjdk-17-slim

# Set working directory
WORKDIR /app

# Copy everything
COPY . .

# Build the application with verbose output
RUN mvn clean package -DskipTests -X

# Expose port
EXPOSE 10000

# Start application
CMD ["java", "-jar", "target/news-search-microservice-1.0.0.jar"]
